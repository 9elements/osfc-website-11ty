<!DOCTYPE html>
<html lang="en" class="no-js {{ pageName or "" }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    {% include "partials/meta-info.njk" %}

    <script>
      document
        .documentElement
        .classList
        .remove("no-js");
      document
        .documentElement
        .classList
        .add("js-active");
    </script>

    {% if env.nodeenv !== 'production' %}
      <!-- We're not in production mode -->
      <link rel="stylesheet" href="/assets/css/global.css" />
    {% endif %}
  </head>

  <body>
    <div class="site-wrap">
      {% if triangle %}
        <div class="triangle" aria-hidden="true"></div>
      {% endif %}
      <div class="stack-900">
        {% if not transparentHeader %}
          {% include "partials/site-head-home.njk" %}
        {% else %}
          {% include "partials/site-head.njk" %}
        {% endif %}
        <main tabindex="-1" id="main-content">
          {% block content %}{% endblock %}
        </main>
        {% include "partials/site-foot.njk" %}
      </div>
    </div>
    {% script src = "nav.js" %}
  </body>
</html>